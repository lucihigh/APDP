@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center align-items-center min-vh-75 py-4">
    <div class="col-sm-10 col-md-8 col-lg-6">
        <div class="card shadow-sm auth-card">
            <div class="card-body p-4 p-lg-5">
                <div class="text-center mb-3">
                    <i class="bi bi-mortarboard-fill text-primary fs-1"></i>
                    <h1 class="h3 mt-2">Sign in to SIMS</h1>
                    <p class="text-muted m-0">Use your email and password</p>
                </div>
                <form id="account" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Identifier" class="form-control" autocomplete="username" aria-required="true" placeholder="Email or username" />
                        <label asp-for="Input.Identifier" class="form-label">Email or Username</label>
                        <span asp-validation-for="Input.Identifier" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label"></label>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>
                    <div class="d-flex justify-content-between mt-3 small">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</a>
                    </div>
                    <hr class="my-4" />
                    <div class="text-center text-muted small">Contact your administrator to obtain an account.</div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
