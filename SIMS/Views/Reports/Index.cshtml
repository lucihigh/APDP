@{
    ViewData["Title"] = "Reports";
}
<h1 class="mb-2">Reports</h1>
<p class="text-muted">Generate CSV exports and view at-a-glance metrics for your courses.</p>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Course (for analytics)</label>
                <select class="form-select" data-report-course required>
                    <option value="">Select course</option>
                    @if (ViewBag.Courses != null)
                    {
                        foreach (var c in ViewBag.Courses)
                        {
                            <option value="@c.Id">@c.Label</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Course roster CSV</label>
                <form method="get" asp-action="CourseRosterCsv" class="d-flex gap-2">
                    <select class="form-select" name="courseId" required>
                        <option value="">Select course</option>
                        @if (ViewBag.Courses != null)
                        {
                            foreach (var c in ViewBag.Courses)
                            {
                                <option value="@c.Id">@c.Label</option>
                            }
                        }
                    </select>
                    <button class="btn btn-outline-primary" type="submit">Export</button>
                </form>
            </div>
            <div class="col-md-4">
                <label class="form-label">Gradebook CSV</label>
                <form method="get" asp-action="GradebookCsv" class="d-flex gap-2">
                    <select class="form-select" name="courseId" required>
                        <option value="">Select course</option>
                        @if (ViewBag.Courses != null)
                        {
                            foreach (var c in ViewBag.Courses)
                            {
                                <option value="@c.Id">@c.Label</option>
                            }
                        }
                    </select>
                    <button class="btn btn-outline-primary" type="submit">Export</button>
                </form>
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="mt-3">
                <a class="btn btn-outline-secondary" asp-action="SystemSummaryCsv">System Summary CSV</a>
            </div>
        }
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="text-secondary text-uppercase small fw-semibold mb-2">Overview</div>
                <div class="d-flex flex-column gap-2">
                    <div class="d-flex justify-content-between">
                        <span class="text-secondary">Students</span>
                        <span class="fw-semibold" data-metric="total">-</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-secondary">Graded</span>
                        <span class="fw-semibold" data-metric="graded">-</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-secondary">Pending</span>
                        <span class="fw-semibold" data-metric="pending">-</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-secondary">Average grade</span>
                        <span class="fw-semibold" data-metric="avg">-</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="text-secondary text-uppercase small fw-semibold">Grade distribution</div>
                </div>
                <canvas id="gradeChart" height="220"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="text-secondary text-uppercase small fw-semibold">Submission status</div>
                </div>
                <canvas id="submissionChart" height="220"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="text-secondary text-uppercase small fw-semibold">Program breakdown</div>
        </div>
        <canvas id="programChart" height="240"></canvas>
    </div>
</div>
