@model IEnumerable<SIMS.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<div class="page-header d-flex flex-wrap align-items-center justify-content-between gap-2">
    <div>
        <div class="page-header-title">Enrollments</div>
        <div class="page-header-subtitle">Track students registered in each course and semester.</div>
    </div>
    <div class="d-flex gap-2">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-outline-success" asp-action="BulkCreate"><i class="bi bi-people-fill me-1"></i> Bulk enroll</a>
            <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i> New enrollment</a>
        }
    </div>
</div>
<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-4 col-lg-3">
        <label class="form-label">Course</label>
        <select class="form-select" name="courseCode">
            <option value="">All courses</option>
            @if (ViewBag.CourseOptions != null)
            {
                foreach (var c in ViewBag.CourseOptions)
                {
                    <option value="@c.Value" selected="@(c.Value == (string)ViewBag.CourseCode ? "selected" : null)">@c.Text</option>
                }
            }
        </select>
    </div>
    <div class="col-md-4 col-lg-3">
        <label class="form-label">Semester</label>
        <input class="form-control" name="semester" value="@(ViewBag.Semester ?? string.Empty)" placeholder="e.g. Fall 2025" />
    </div>
    <div class="col-md-4 col-lg-3">
        <label class="form-label">Student (name/email)</label>
        <input class="form-control" name="student" value="@(ViewBag.Student ?? string.Empty)" placeholder="Search student" />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit"><i class="bi bi-funnel me-1"></i>Filter</button>
        <a class="btn btn-outline-secondary ms-1" asp-action="Index">Reset</a>
    </div>
</form>
<div class="card shadow-sm">
    <div class="card-body p-0">
<div class="table-responsive">
<table class="table table-striped table-hover align-middle mb-0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Code)
            </td>
            <td class="text-end table-actions">
                <div class="d-inline-flex gap-2 action-group">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Grade" asp-route-id="@item.Id">
                        <i class="bi bi-journal-check me-1"></i>Grade
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-sm btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square me-1"></i>Edit
                        </a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash me-1"></i>Delete
                        </a>
                    }
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
    </div>
</div>
