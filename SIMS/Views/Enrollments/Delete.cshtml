@model SIMS.Models.Enrollment

@{
    ViewData["Title"] = "Delete enrollment";
}

<div class="page-header mb-3">
    <div class="page-header-title text-danger d-flex align-items-center gap-2">
        <i class="bi bi-exclamation-triangle-fill"></i>
        Delete enrollment
    </div>
    <div class="page-header-subtitle">Are you sure you want to remove this enrollment?</div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap justify-content-between align-items-start mb-3 gap-3">
            <div>
                <div class="text-secondary small">Student</div>
                <div class="h5 mb-1">@Model.Student?.Email</div>
                <div class="text-secondary small">Course: @Model.Course?.Code</div>
            </div>
            <span class="badge bg-danger-subtle text-danger px-3 py-2">
                <i class="bi bi-calendar2-x me-1"></i>Semester @Model.Semester
            </span>
        </div>

        <dl class="row g-3 mb-0">
            <dt class="col-sm-3 text-secondary">Semester</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Semester</dd>

            <dt class="col-sm-3 text-secondary">Grade</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Grade</dd>

            <dt class="col-sm-3 text-secondary">Student</dt>
            <dd class="col-sm-9 fw-semibold">
                <a href="mailto:@Model.Student?.Email">@Model.Student?.Email</a>
            </dd>

            <dt class="col-sm-3 text-secondary">Course</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Course?.Code</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex gap-2 align-items-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill me-1"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
        </form>
    </div>
</div>
