@model SIMS.Models.Assessment

@{
    ViewData["Title"] = "Assessment details";
}

<div class="page-header mb-3">
    <div class="page-header-title">Assessment details</div>
    <div class="page-header-subtitle">Title, description, due date, and course.</div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap justify-content-between align-items-start mb-3 gap-3">
            <div>
                <div class="text-secondary small">Assessment</div>
                <div class="h5 mb-1">@Model.Title</div>
                <div class="text-secondary small">Course: @Model.Course?.Code</div>
            </div>
            <span class="badge bg-primary-subtle text-primary px-3 py-2">
                <i class="bi bi-calendar-event me-1"></i>@(Model.DueDate?.ToString("yyyy-MM-dd") ?? "No due date")
            </span>
        </div>

        <dl class="row g-3 mb-0">
            <dt class="col-sm-3 text-secondary">Title</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Title</dd>

            <dt class="col-sm-3 text-secondary">Description</dt>
            <dd class="col-sm-9 text-muted">@Model.Description</dd>

            <dt class="col-sm-3 text-secondary">Due date</dt>
            <dd class="col-sm-9 fw-semibold">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 text-secondary">Attachment</dt>
            <dd class="col-sm-9 fw-semibold">@Model.AttachmentPath</dd>

            <dt class="col-sm-3 text-secondary">Course</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Course?.Code</dd>
        </dl>

        <div class="d-flex gap-2 mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
        </div>
    </div>
</div>
