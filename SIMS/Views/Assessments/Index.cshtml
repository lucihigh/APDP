@model IEnumerable<SIMS.Models.Assessment>
@{
    ViewData["Title"] = "Assessments";
    var hasItems = Model.Any();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <div class="page-header-title mb-1">Assessments</div>
        <div class="page-header-subtitle">Manage course assessments and deadlines.</div>
    </div>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i> New assessment</a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Due date</th>
                    <th>Attachment</th>
                    <th>Course</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (hasItems)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Title</td>
                            <td class="text-muted">@item.Description</td>
                            <td>@(item.DueDate?.ToString("yyyy-MM-dd") ?? "â€”")</td>
                            <td class="text-muted">@item.AttachmentPath</td>
                            <td>@item.Course?.Code</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">No assessments yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
