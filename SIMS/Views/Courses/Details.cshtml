@model SIMS.Models.Course

@{
    ViewData["Title"] = "Course details";
}

<div class="page-header mb-3">
    <div class="page-header-title">Course details</div>
    <div class="page-header-subtitle">Overview of course code, credits, and department.</div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap justify-content-between align-items-start mb-3 gap-3">
            <div>
                <div class="text-secondary small">Course code</div>
                <div class="h4 mb-1">@Model.Code</div>
                <div class="text-secondary small">Department: @Model.Department</div>
            </div>
            <span class="badge bg-primary-subtle text-primary px-3 py-2">
                <i class="bi bi-book-half me-1"></i>@Model.Credits @(Model.Credits == 1 ? "credit" : "credits")
            </span>
        </div>

        <dl class="row g-3 mb-0">
            <dt class="col-sm-3 text-secondary">Name</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Name</dd>

            <dt class="col-sm-3 text-secondary">Credits</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Credits</dd>

            <dt class="col-sm-3 text-secondary">Department</dt>
            <dd class="col-sm-9 fw-semibold">@Model.Department</dd>
        </dl>

        <div class="d-flex gap-2 mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
        </div>
    </div>
</div>
