@model IEnumerable<SIMS.Models.Enrollment>
@{
    ViewData["Title"] = "Class List";
    var course = (SIMS.Models.Course)ViewData["Course"]!;
    var q = ViewData["q"] as string;
}
<div class="page-header mb-3">
    <div class="page-header-title">Class List - @course.Code @course.Name</div>
    <div class="page-header-subtitle">Grade from the class roster and track who has submitted.</div>
</div>

<form method="get" class="row g-2 align-items-end mb-3" role="search" aria-label="Search class list">
    <input type="hidden" name="id" value="@course.Id" />
    <div class="col-sm-6 col-md-4 col-lg-3">
        <label class="form-label">Search</label>
        <input class="form-control" type="search" name="q" value="@(q ?? string.Empty)" placeholder="Name, email, program, year, grade" data-class-search />
    </div>
</form>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Program</th>
                        <th>Year</th>
                        <th>Status</th>
                        <th>Grade</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var enrollment in Model)
                {
                    var student = enrollment.Student;
                    var hasSubmission = !string.IsNullOrWhiteSpace(enrollment.Grade);
                    var searchText = string.Join(" ", new[]
                    {
                        student?.FullName,
                        student?.Email,
                        student?.Program,
                        student?.Year?.ToString(),
                        enrollment.Grade,
                        enrollment.Semester
                    }.Where(s => !string.IsNullOrWhiteSpace(s))).ToLowerInvariant();
                    <tr data-class-row data-search="@searchText">
                        <td>@student?.FullName</td>
                        <td>@student?.Email</td>
                        <td>@student?.Program</td>
                        <td>@student?.Year</td>
                        <td>
                            @if (hasSubmission)
                            {
                                <span class="badge bg-success-subtle text-success">Submitted</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary">Not submitted</span>
                            }
                        </td>
                        <td class="fw-semibold">
                            @(string.IsNullOrWhiteSpace(enrollment.Grade) ? "-" : enrollment.Grade)
                        </td>
                        <td class="text-end table-actions">
                            <div class="d-inline-flex gap-2 action-group">
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Enrollments" asp-action="Grade" asp-route-id="@enrollment.Id">
                                    <i class="bi bi-journal-check me-1"></i>Grade
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                <tr data-class-empty style="display:none;">
                    <td colspan="7" class="text-center text-secondary">No students match your search.</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
(() => {
  const input = document.querySelector('[data-class-search]');
  const rows = Array.from(document.querySelectorAll('[data-class-row]'));
  const empty = document.querySelector('[data-class-empty]');
  if (!input || rows.length === 0) return;

  const filter = () => {
    const term = (input.value || '').trim().toLowerCase();
    let visible = 0;
    rows.forEach(row => {
      const haystack = row.dataset.search || '';
      const match = term === '' || haystack.includes(term);
      row.style.display = match ? '' : 'none';
      if (match) visible++;
    });
    if (empty) empty.style.display = visible === 0 ? '' : 'none';
  };

  input.addEventListener('input', filter);
  filter();
})();
</script>
}
