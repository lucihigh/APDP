@model SIMS.Models.Student

@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card profile-card">
            <div class="card-body p-4 p-lg-5">
                <div class="d-flex align-items-start justify-content-between flex-wrap gap-3">
                    <div>
                        <p class="text-uppercase fw-semibold small text-accent mb-1">Student Profile</p>
                        <h1 class="h2 fw-bold mb-1">Details</h1>
                        <div class="d-flex align-items-center gap-2 text-muted">
                            <i class="bi bi-person-badge"></i>
                            <span>@Model.FirstName @Model.LastName</span>
                        </div>
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil-square me-1"></i>Edit
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-list-ul me-1"></i>Back to List
                            </a>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <a asp-action="UpdateProfile" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square me-1"></i>Update Profile
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i>Back to Home
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i>Back
                            </a>
                        }
                    </div>
                </div>

                <hr class="text-muted" />

                <div class="row g-4 info-grid">
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-person-fill text-accent me-1"></i> Full name</span>
                            <span class="value">@Model.FirstName @Model.LastName</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-calendar-event text-accent me-1"></i> Date of birth</span>
                            <span class="value">@Model.DateOfBirth?.ToShortDateString()</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-envelope-fill text-accent me-1"></i> Email</span>
                            <span class="value">
                                <a class="link-light" href="mailto:@Model.Email">@Model.Email</a>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-telephone-fill text-accent me-1"></i> Phone</span>
                            <span class="value">@Model.Phone</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-geo-alt-fill text-accent me-1"></i> Address</span>
                            <span class="value">@Model.Address</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-journal-bookmark-fill text-accent me-1"></i> Program</span>
                            <span class="value">@Model.Program</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-mortarboard-fill text-accent me-1"></i> Year</span>
                            <span class="badge rounded-pill bg-soft">@Model.Year</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-activity text-accent me-1"></i> GPA</span>
                            <span class="badge rounded-pill bg-primary-subtle text-light">@Model.GPA</span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="info-item">
                            <span class="label"><i class="bi bi-person-vcard-fill text-accent me-1"></i> User Id</span>
                            <span class="value mono">@Model.User?.Id</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
