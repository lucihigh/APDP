@model SIMS.Models.StudentTimetableViewModel
@{
    ViewData["Title"] = "My Timetable";
    var days = SIMS.Models.StudentTimetableViewModel.Days;
    var slots = SIMS.Models.StudentTimetableViewModel.Slots;
}

<div class="page-header d-flex flex-wrap align-items-start justify-content-between gap-3 mb-4">
    <div>
        <div class="page-header-title">My Timetable</div>
        <div class="page-header-subtitle">Select a course to view your weekly schedule (Monday - Sunday).</div>
    </div>
</div>

@if (Model.Courses.Count == 0)
{
    <div class="alert alert-info mb-0">
        You don't have any courses in your timetable yet.
    </div>
}
else
{
    <div class="accordion accordion-flush timetable-accordion" id="timetableAccordion">
        @for (var i = 0; i < Model.Courses.Count; i++)
        {
            var course = Model.Courses[i];
            var headingId = $"ttHeading{i}";
            var collapseId = $"ttCollapse{i}";

            <div class="accordion-item">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed timetable-course-button" type="button"
                            data-bs-toggle="collapse" data-bs-target="#@collapseId"
                            aria-expanded="false" aria-controls="@collapseId">
                        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between w-100 gap-1 gap-md-3">
                            <div class="fw-semibold">
                                <span class="text-primary">@course.Code</span> - @course.Name
                            </div>
                            <div class="small text-secondary">
                                @(course.Sessions.Count == 0 ? "No scheduled sessions" : $"{course.Sessions.Count} session(s)/week")
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#timetableAccordion">
                    <div class="accordion-body">
                        @if (course.Sessions.Count == 0)
                        {
                            <div class="alert alert-secondary mb-0">
                                This course is not scheduled yet. Please check back later.
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm align-middle mb-0 timetable-grid">
                                    <thead>
                                        <tr>
                                            <th class="timetable-slot-col">Slot</th>
                                            @foreach (var d in days)
                                            {
                                                <th class="text-center">@d.Label</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var slot in slots)
                                        {
                                            <tr>
                                                <th class="timetable-slot-col">
                                                    <div class="fw-semibold">@slot.Label</div>
                                                    <div class="small text-secondary">@slot.TimeRange</div>
                                                </th>
                                                @foreach (var d in days)
                                                {
                                                    var sessions = course.Sessions
                                                        .Where(s => s.DayOfWeek == d.Value && s.SessionSlot == slot.Slot)
                                                        .OrderBy(s => s.StartDate)
                                                        .ToList();
                                                    <td class="timetable-cell">
                                                        @if (sessions.Count > 0)
                                                        {
                                                            foreach (var s in sessions)
                                                            {
                                                                <div class="timetable-pill">
                                                                    <div class="fw-semibold">@course.Code</div>
                                                                    <div class="small text-secondary">
                                                                        @if (!string.IsNullOrWhiteSpace(s.Location))
                                                                        {
                                                                            <span>@s.Location</span><span class="mx-1">|</span>
                                                                        }
                                                                        <span>@s.StartDate.ToString("yyyy-MM-dd") to @s.EndDate.ToString("yyyy-MM-dd")</span>
                                                                    </div>
                                                                </div>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span class="text-secondary small">-</span>
                                                        }
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-3 small text-secondary">
                                Tip: On mobile, swipe horizontally to see all days.
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

