@model IEnumerable<SIMS.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="page-header d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
    <div>
        <div class="page-header-title">Students</div>
        <div class="page-header-subtitle">Manage student records, linked accounts, and academics.</div>
    </div>
    <div class="d-flex gap-2 align-items-center">
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg me-1"></i> New student
        </a>
    </div>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-center" role="search" aria-label="Search students">
            <div class="col-sm-8 col-md-6 col-lg-4">
                <input class="form-control" type="search" name="q" value="@((string?)ViewData["q"])" placeholder="Search name, email, program" />
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search me-1"></i>Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>DOB</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Program</th>
                        <th>Year</th>
                        <th>GPA</th>
                        <th>Linked Account</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.DateOfBirth?.ToString("M/d/yyyy")</td>
                            <td><a href="mailto:@item.Email">@item.Email</a></td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>@item.Program</td>
                            <td>@item.Year</td>
                            <td>@item.GPA</td>
                            <td>@item.User?.Email</td>
                            <td class="text-end table-actions">
                                <div class="action-group">
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-info-circle me-1"></i>Details
                                    </a>
                                    <a class="btn btn-sm btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
