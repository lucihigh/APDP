@{
    ViewData["Title"] = "Import Students";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent fw-semibold"><i class="bi bi-file-earmark-arrow-up me-2"></i>Import Students (CSV)</div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12">
                        <input type="file" name="file" class="form-control" accept=".csv" required />
                        <div class="form-text">
                            CSV with headers (case-insensitive). Supported columns: Email (required), FirstName, LastName, DateOfBirth/DOB, Phone, Address, Program, Year, GPA.
                        </div>
                    </div>
                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Import</button>
                        <a asp-action="ExportStudents" class="btn btn-outline-secondary" data-shell="off">Export Students (.xlsx)</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
