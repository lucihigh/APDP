@{
    ViewData["Title"] = "Reset Password";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent fw-semibold"><i class="bi bi-key-fill me-2"></i>Reset Student Password</div>
            <div class="card-body">
                <form method="post" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Student Email</label>
                        <input name="email" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">New Password</label>
                        <input name="newPassword" class="form-control" required />
                    </div>
                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Reset</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
