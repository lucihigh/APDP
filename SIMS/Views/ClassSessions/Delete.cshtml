@model SIMS.Models.ClassSession

@{
    ViewData["Title"] = "Delete session";
    string DayLabel(int d) => d switch
    {
        1 => "Thứ 2",
        2 => "Thứ 3",
        3 => "Thứ 4",
        4 => "Thứ 5",
        5 => "Thứ 6",
        6 => "Thứ 7",
        _ => "Chủ nhật"
    };
    string SlotRange(int slot) => slot switch
    {
        1 => "07:00 - 09:00",
        2 => "09:00 - 11:00",
        3 => "12:00 - 14:00",
        4 => "14:00 - 16:00",
        5 => "16:00 - 18:00",
        6 => "18:00 - 20:00",
        _ => ""
    };
}

<div class="page-header mb-3">
    <div class="page-header-title text-danger d-flex align-items-center gap-2">
        <i class="bi bi-exclamation-triangle-fill"></i>
        Delete session
    </div>
    <div class="page-header-subtitle">Are you sure you want to remove this class session?</div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap align-items-start justify-content-between mb-3 gap-3">
            <div>
                <div class="text-secondary small">Course</div>
                <div class="h5 mb-1">@Model.Course?.Code</div>
                <div class="text-secondary small">Session ID: @Model.Id</div>
            </div>
            <span class="badge bg-danger-subtle text-danger px-3 py-2">
                @DayLabel(Model.DayOfWeek) • Ca @Model.SessionSlot (@SlotRange(Model.SessionSlot))
            </span>
        </div>

        <dl class="row g-3 mb-0">
            <dt class="col-sm-3 text-secondary">Start date</dt>
            <dd class="col-sm-9 fw-semibold">@Model.StartTime.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 text-secondary">End date</dt>
            <dd class="col-sm-9 fw-semibold">@Model.EndTime.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Location)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4 d-flex gap-2 align-items-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill me-1"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
        </form>
    </div>
</div>
