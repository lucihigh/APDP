@model SIMS.Models.ClassSession

@{
    ViewData["Title"] = "Session details";
    string DayLabel(int d) => d switch
    {
        1 => "Monday",
        2 => "Tuesday",
        3 => "Wednesday",
        4 => "Thursday",
        5 => "Friday",
        6 => "Saturday",
        _ => "Sunday"
    };
    string SlotRange(int slot) => slot switch
    {
        1 => "07:00 - 09:00",
        2 => "09:00 - 11:00",
        3 => "12:00 - 14:00",
        4 => "14:00 - 16:00",
        5 => "16:00 - 18:00",
        6 => "18:00 - 20:00",
        _ => ""
    };
}

<div class="page-header mb-3">
    <div class="page-header-title">Session details</div>
    <div class="page-header-subtitle">Schedule, timing, and location for this class session.</div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap align-items-start justify-content-between mb-3 gap-3">
            <div>
                <div class="text-secondary small">Course</div>
                <div class="h5 mb-1">@Model.Course?.Code</div>
                <div class="text-secondary small">Session ID: @Model.Id</div>
            </div>
            <span class="badge bg-primary-subtle text-primary px-3 py-2">
                @DayLabel(Model.DayOfWeek) - Slot @Model.SessionSlot (@SlotRange(Model.SessionSlot))
            </span>
        </div>

        <dl class="row g-3 mb-0">
            <dt class="col-sm-3 text-secondary">Start date</dt>
            <dd class="col-sm-9 fw-semibold">@Model.StartTime.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 text-secondary">End date</dt>
            <dd class="col-sm-9 fw-semibold">@Model.EndTime.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Location)</dd>
        </dl>

        <div class="d-flex gap-2 mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i> Edit session
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
        </div>
    </div>
</div>

