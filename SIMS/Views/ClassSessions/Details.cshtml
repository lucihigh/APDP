@model SIMS.Models.ClassSession

@{
    ViewData["Title"] = "Session details";
}

<div class="page-header mb-3">
    <div class="page-header-title">Session details</div>
    <div class="page-header-subtitle">Schedule, timing, and location for this class session.</div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap align-items-start justify-content-between mb-3 gap-3">
            <div>
                <div class="text-secondary small">Course</div>
                <div class="h5 mb-1">@Model.Course?.Code</div>
                <div class="text-secondary small">Session ID: @Model.Id</div>
            </div>
            <span class="badge bg-primary-subtle text-primary px-3 py-2">
                Day @Model.DayOfWeek
            </span>
        </div>

        <dl class="row g-3 mb-0">
            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.StartTime)</dt>
            <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.StartTime)</dd>

            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.EndTime)</dt>
            <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.EndTime)</dd>

            <dt class="col-sm-3 text-secondary">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Location)</dd>
        </dl>

        <div class="d-flex gap-2 mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i> Edit session
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>
        </div>
    </div>
</div>
