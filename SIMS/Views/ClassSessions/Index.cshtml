@model IEnumerable<SIMS.Models.ClassSession>
@{
    ViewData["Title"] = "Sessions";
    string DayLabel(int d) => d switch
    {
        1 => "Monday",
        2 => "Tuesday",
        3 => "Wednesday",
        4 => "Thursday",
        5 => "Friday",
        6 => "Saturday",
        _ => "Sunday"
    };
    string SlotRange(int slot) => slot switch
    {
        1 => "07:00 - 09:00",
        2 => "09:00 - 11:00",
        3 => "12:00 - 14:00",
        4 => "14:00 - 16:00",
        5 => "16:00 - 18:00",
        6 => "18:00 - 20:00",
        _ => ""
    };
}

<div class="page-header mb-3">
    <div class="page-header-title">Sessions</div>
    <div class="page-header-subtitle">Manage class sessions, times, and locations.</div>
</div>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Create session
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Day</th>
                        <th>Slot</th>
                        <th>Start date</th>
                        <th>End date</th>
                        <th>Location</th>
                        <th>Course</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@DayLabel(item.DayOfWeek)</td>
                        <td>
                            <span class="fw-semibold">Slot @item.SessionSlot</span>
                            <div class="small text-secondary">@SlotRange(item.SessionSlot)</div>
                        </td>
                        <td>@item.StartTime.ToString("yyyy-MM-dd")</td>
                        <td>@item.EndTime.ToString("yyyy-MM-dd")</td>
                        <td>@item.Location</td>
                        <td>@item.Course?.Code</td>
                        <td class="text-end">
                            <div class="d-inline-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-info-circle me-1"></i>Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-pencil-square me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

