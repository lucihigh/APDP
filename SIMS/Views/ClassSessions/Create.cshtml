@model SIMS.Models.ClassSession

@{
    ViewData["Title"] = "Create Session";
}

<div class="page-header mb-3">
    <div class="page-header-title">Create session</div>
    <div class="page-header-subtitle">Set meeting day, dates, and room for a course.</div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm form-card">
            <div class="card-body">
                <form asp-action="Create" class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col-12">
                        <label asp-for="CourseId" class="form-label">Course</label>
                        <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId"></select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DayOfWeek" class="form-label">Day of week (0-6)</label>
                        <input asp-for="DayOfWeek" class="form-control" type="number" min="0" max="6" />
                        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label"></label>
                        <input asp-for="Location" class="form-control" placeholder="Online / Room A1 / ..." />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="StartTime" class="form-label">Start date</label>
                        <input asp-for="StartTime" class="form-control" type="date" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndTime" class="form-label">End date</label>
                        <input asp-for="EndTime" class="form-control" type="date" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>

                    <div class="col-12 d-flex justify-content-between align-items-center mt-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check2 me-1"></i>Create session
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

