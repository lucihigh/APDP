@* Shared footer used across the site *@
@{
    var commit =
        Environment.GetEnvironmentVariable("RENDER_GIT_COMMIT")
        ?? Environment.GetEnvironmentVariable("GIT_COMMIT")
        ?? Environment.GetEnvironmentVariable("SOURCE_VERSION");

    var shortCommit = !string.IsNullOrWhiteSpace(commit) && commit!.Length >= 7 ? commit[..7] : null;
}
<footer class="app-footer border-top bg-body-tertiary mt-auto">
    <div class="container-xl d-flex justify-content-between align-items-center py-3">
        <div class="text-muted small">
            &copy; @DateTime.Now.Year - <strong>SIMS</strong>
            @if (User.IsInRole("Admin") && shortCommit != null)
            {
                <span class="ms-2">Build @shortCommit</span>
            }
        </div>
        <div class="d-flex gap-3 small">
            <a class="link-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </div>
 </footer>
